<h1> New Event </h1>

<%= form_for @event do |f|%>
    <%= f.label 'Event Name:', class: "form-label"%></br>
    <%= f.text_field :event_name, class: "form-input"%></br>
    <%= f.label 'Event Date:', class: "form-label"%></br>
    <%= f.datetime_field :event_date, class: "form-input"%></br>
    <%= f.label 'Event Location:',  class: "form-label"%></br>
    <%= f.text_field :location, class: "form-input"%></br>
    <%= f.label 'Event Description:',  class: "form-label"%></br>
    <%= f.text_area :event_description, class: "form-input"%></br>
    <%= f.submit "Create Event", class: "form-button"%>
<%end%>

<%= link_to '<< Back', root_path %>